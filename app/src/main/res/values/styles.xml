<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- For titles-->
    <style name="TextAppearance.App.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!-- For smaller titles-->
    <style name="TextAppearance.App.H2" parent="@style/TextAppearance.App.H1">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!-- For other prominent text -->
    <style name="TextAppearance.App.H3" parent="@style/TextAppearance.App.H1">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Small" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.App.ListPrimary" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextAppearance.App.Main" parent="TextAppearance.MaterialComponents.Subtitle2" >
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>


    <style name="Widget.App.TextInputLayout.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="endIconTint">?colorOnSurface</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="Widget.App.Button.Outlined.Primary">
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="Widget.App.Button.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon" />


    <style name="TextAppearance.App.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="TextAppearance.App.TextLimit" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?colorAccent</item>
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="TextAppearance.App.TextLimit.Error">
        <item name="android:textColor">?colorError</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout.HintText</item>
        <item name="hintTextColor">?colorOnSurface</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
    </style>

    <style name="Widget.App.TextInputLayout.Normal" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout.HintText</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Body</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
    </style>

</resources>
